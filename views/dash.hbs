{{#if loggedIn}}
    <div class="text-center mt-3 mb-3">
  <a href="/postnew" ><button class="btn btn-primary">Create New Post +</button></a>
</div>
  {{#each plainPosts}}
<div class="card mx-auto mb-2 posts">
  <div class="card-title mb-0">
    <a href="/edit/{{ this.id }}">{{ this.postTitle }}</a>
    <div class="float-right date">
      Posted by {{ this.user.name }} on {{format_date this.createdAt}}
    </div>
  </div>
  <div class="card-body">{{ postText }}</div>
</div>
  {{/each}}
{{/if}}