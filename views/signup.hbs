<div class="d-flex justify-content-center" id="error"></div>
<div class="d-flex justify-content-center" style="margin-top: 50px">
  <div class="card">
    <div class="card-header">
      <h1 style="font-size: 24px">Sign Up</h1>
    </div>
    <div class="card-body">
      <form>
        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-user"></i></span>
          </div>
          <input type="text" class="form-control" placeholder="username" id="id" />
        </div>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-key"></i></span>
          </div>
          <input type="password" class="form-control" placeholder="password" id="pw" />
        </div>
        <div class="text-center mt-2">
          <input
            type="submit"
            value="Create Account"
            class="btn btn-primary align-center"
            id="createAccount"
          />
        </div>
      </form>
    </div>
    <div class="card-footer">
      <div class="d-flex justify-content-center">
        <a href="/sign-in">Sign In</a>
      </div>
    </div>
  </div>
</div>
